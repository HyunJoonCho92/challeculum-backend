<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="companion.challeculum.domains.user.UserRepository">
    <insert id="registerUser" parameterType="userRegisterDto">
        insert into user (username, password, nickname, phone) values (#{username},#{password},#{nickname},#{phone})
    </insert>
    <insert id="registerSocialLoginUser" parameterType="user">
        insert into user (oauth_id, username, password) values (#{oauthId}, #{username},#{password})
    </insert>
    <update id="updateUser" parameterType="userUpdateDto">
        update user
        set password = #{password}
          , nickname = #{nickname}
          , phone    = #{prevContributor}
        where id = #{id}
    </update>

    <select id="findById" parameterType="long" resultType="user">
        select * from user where id=#{id}
    </select>
    <select id="findByUsername" parameterType="string" resultType="user">
        select * from user where username=#{username}
    </select>
    <select id="findByOAuthId" parameterType="string" resultType="user">
        select * from user where oauth_id=#{oauthId}
    </select>
</mapper>

